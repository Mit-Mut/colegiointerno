<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_inherit_view_for_inv_billing" model="ir.ui.view">
        <field name="name">product.inherit.view.for.inv.billing</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_policy']" position="after">
                <field name="general_public_invoice"/>
                <field name="donation"/>
            </xpath>
        </field>
    </record>
    <record id="product_normal_form_view_mm" model="ir.ui.view">
        <field name="name">product_normal_form_view.mm</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_policy']" position="after">
                <field name="general_public_invoice"/>
                <field name="donation"/>
            </xpath>
        </field>
    </record>
</odoo>
